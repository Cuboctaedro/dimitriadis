{% extends "./base.njk" %}

{% block content %}
    <main class="container mx-auto mt-12">
        <ul class=" w-full ">
            {% for item in collections.workSorted %}
                {% set num = ['1','2','3'] | random %}
                {% set side = ['left', 'right'] | random %}
                {% set randclass = 'side-' + side + ' ' + 'num-' + num %}
                
                <li class="mb-16">
                    <article class="relative flex flex-wrap random {{randclass}}">
                        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-3 image">
                            <a class="block hover:shadow-lg" href="{{ item.url }}">
                                {% image './src/' + item.data.cover, 'block w-full h-auto', item.data.title + ' cover', "100vw, (min width 540px) 50vw, (min width 768px) 33vw, (min width 1024px) 25vw" %}
                                {# <img src="/{{ item.data.cover }}" class="block w-full h-auto" /> #}
                            </a>
                        </div>
                        <div class="w-full sm:w-1/2 md:w-2/3 lg:w-1/4 px-3 text">
                            <h1 class="font-bold text-base sm:text-lg uppercase mb-6">
                                <a href="{{ item.url }}" class="hover:text-gray-700">
                                    {{ item.data.title }}
                                </a>
                            </h1>
                            {% if(item.data.year) %}
                            <div class="pb-1">
                                <span class="uppercase">Date: </span>{{item.data.year}}
                            </div>
                            {% endif %}
                            {% if(item.data.place) %}
                            <div class="pb-1">
                                <span class="uppercase">Place: </span>{{item.data.place}}
                            </div>
                            {% endif %}
                            {% if(item.data.medium) %}
                            <div class="pb-1">
                                <span class="uppercase">Medium: </span>{{item.data.medium}}
                            </div>
                            {% endif %}
                            {% if(item.data.size) %}
                            <div class="pb-1">
                                <span class="uppercase">Size: </span>{{item.data.size}}
                            </div>
                            {% endif %}
                        </div>
                    </article>
                        
                        
                </li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}