{% extends "./base.njk" %}

{% block content %}
    <main class="container mx-auto mt-12 px-3">
        <ul class=" w-full overflow-x-hidden">
            {% for item in collections.workSorted %}
                {% set num = ['1', '2', '3', '4', '5'] | random %}
                {% set randclass = 'num-' + num %}
                
                <li class="mb-16 md:mb-48 xl:mb-64">
                    <article class="relative w-full md:w-1/2 xl:w-1/3 random {{randclass}}">
                        <div class="w-full image">
                            <a class="block hover:shadow-lg" href="{{ item.url }}">
                                {% image './src/' + item.data.cover, item.data.title , 'md', 'block w-full h-auto'%}
                            </a>
                            <div class="pt-2 text">
                                <h1 class="text-base mb-1">
                                    <a href="{{ item.url }}" class="hover:text-gray-700">
                                        {{ item.data.title }}
                                    </a>
                                </h1>
                                {% if(item.data.year) %}
                                <div class="">
                                    {{item.data.year}}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </article>
                        
                        
                </li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}